<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_album_item_bg">
    <TextView
        android:id="@+id/order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:text="0"
        android:textColor="@color/gray"
        android:textSize="18sp"
        >
    </TextView>
    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/update_time"
        android:layout_toEndOf="@id/order_text"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/large_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="我是大标题"
            android:textColor="@color/black"
            android:textSize="18sp"
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_play_small_icon"
                android:drawablePadding="4dp"
                android:text="14.4万"
                android:textColor="#979797"
                android:textSize="12sp"
                >
            </TextView>

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/ic_sound_small_icon"
                android:drawablePadding="4dp"
                android:text="05:23"
                android:textSize="12sp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="2021-11-26"
        android:textColor="@color/gray"
        android:textSize="14sp"
        >
    </TextView>
</RelativeLayout>